<div class="row">
  <div class="col-lg-6 col-md-12 col-sm-12 m-auto">
    <%= render 'shared/errors', object: @user %>

    <%= form_for @user do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
      </div>

      <% unless @user.new_record? %>
        <div class="mb-3">
           <%= f.label :old_password, class: 'form-label' %>
           <%= f.password_field :old_password, class: 'form-control' %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit (@user.new_record? ? 'Register' : 'Save'), class: 'btn btn-primary mt-2' %>
    <% end %>
  </div>
</div>
